<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/> <!-- Shadow color -->
            <corners android:radius="40dp"/> <!-- Adjust corner radius -->
            <!-- You can add padding to control the size of the shadow -->
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Button Background Layer -->
    <item android:bottom="2dp" android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background"/> <!-- Button color -->
            <corners android:radius="40dp"/> <!-- Adjust corner radius to match shadow layer -->
        </shape>
    </item>
</layer-list>
