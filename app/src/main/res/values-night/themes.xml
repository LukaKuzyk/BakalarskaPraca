<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BakalarskaPraca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

    <item name="colorPrimary">@color/background_night</item>
    <item name="colorPrimaryVariant">#4D4B4B</item>
    <item name="colorOnPrimary">@color/background</item>
    <item name="android:background">@color/background_night</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/background_night</item>
    <item name="android:windowLightStatusBar">true</item>
    <!--        <item name="android:navigationBarColor">@color/background</item>-->
    <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.ActionBar.Title</item>
    <item name="materialAlertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/card_background_night</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/card_background_night</item>
        <item name="android:gravity">center</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/card_background_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elevation">4dp</item> <!-- Add elevation for shadow -->
        <!--        <item name="android:backgroundTint">@color/card_background</item> &lt;!&ndash; Use backgroundTint for Material buttons &ndash;&gt;-->
        <item name="textAllCaps">false</item>
        <!-- Optional: Specify a shapeAppearance for custom corner rounding -->
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>
    </style>
    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TestCard">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="Theme.BakalarskaPraca" parent="Base.Theme.BakalarskaPraca" />
</resources>