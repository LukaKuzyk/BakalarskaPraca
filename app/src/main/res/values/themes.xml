<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BakalarskaPraca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#4D4B4B</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:background">@color/background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:navigationBarColor">@color/background</item>-->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.ActionBar.Title</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/card_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:gravity">center</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elevation">5dp</item> <!-- Add elevation for shadow -->
        <item name="android:backgroundTint">@color/white</item> <!-- Use backgroundTint for Material buttons -->
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>
    </style>

    <style name="ProgressInfo">
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">5dp</item> <!-- Add elevation for shadow -->
        <item name="android:background">@drawable/progress_info_background</item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TestCard">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="TextSecondaryStyle">
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="MainIcon">
        <item name="srcCompat">@drawable/tuke</item>
    </style>

    <style name="SettingsIcon">
        <item name="srcCompat">@drawable/settings_icon</item>
    </style>

    <style name="BackIcon">
        <item name="srcCompat">@drawable/back_button</item>
    </style>

    <style name="RecyclerViewItem">
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="Theme.BakalarskaPraca" parent="Base.Theme.BakalarskaPraca" />
</resources>